{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "allowBranch": [
        "master",
        "develop"
      ],
      "ignoreChanges": [
        "packages/localize-components-docs",
        "packages/localize-components-examples",
        "packages/localize-components-drawer",
        "packages/localize-components-table",
        "**/__test__",
        "**/*.md"
      ]
    }
  }
}
