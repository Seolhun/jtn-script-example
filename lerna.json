{
  "lerna": "3.4.2",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*",
    "examples/**"
  ],
  "command": {
    "publish": {
      "allowBranch": [
        "master",
        "develop",
        "feature/*"
      ],
      "ignoreChanges": [
        "examples",
        "__test__",
        "*.md"
      ]
    }
  },
  "version": "0.0.13"
}
