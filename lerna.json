{
  "version": "0.5.2",
  "packages": [
    "packages/*"
  ],
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "command": {
    "publish": {
      "allowBranch": [
        "master",
        "develop"
      ],
      "ignoreChanges": [
        "**/__test__",
        "**/*.md",
        "packages/docs"
      ]
    },
    "bootstrap": {
      "ignore":[
        "packages/docs"
      ]
    }
  },
  "changelog": {
    "labels": {
      "nextVersion": "Unreleased",
      "feature": "New Feature",
      "bug": "Bug Fix"
    }
  }
}
