{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "allowBranch": [
        "master",
        "develop"
      ],
      "bootstrap": {
        "ignore": "packages/templates"
      },
      "ignoreChanges": [
        "packages/docs",
        "packages/examples",
        "packages/templates",
        "**/__test__",
        "**/*.md"
      ]
    }
  }
}
