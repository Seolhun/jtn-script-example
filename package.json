{
  "author": "Seolhun",
  "name": "@seolhun/localize-react-components",
  "version": "1.0.0",
  "description": "React components localizing and customizing style easily.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Seolhun/localize-react-components"
  },
  "homepage": "https://github.com/Seolhun/localize-react-components#readme",
  "bugs": {
    "url": "https://github.com/Seolhun/localize-react-components/issues"
  },
  "keywords": [
    "react",
    "typescript",
    "component",
    "ui",
    "scss"
  ],
  "license": "MIT",
  "main": "./src/index.ts",
  "scripts": {
    "build": "tsc && yarn style && yarn style:copy",
    "style": "sass --update src:src --style compressed",
    "style:watch": "sass --watch src:src --style compressed",
    "style:copy": "copyfiles src/**/*.css dist/",
    "style:clean": "find . -name *.css* -type f -delete",
    "test": "jest",
    "test-with-coverage": "jest --coverage && cat ./coverage/lcov.info | codacy-coverage",
    "docs:build": "cd docs && yarn build",
    "docs:dev": "cd docs && yarn dev",
    "clean": "lerna clean",
    "packages:fix": "lerna run fix && echo",
    "packages:lint": "lerna run tslint",
    "packages:build": "lerna run build --ignore localize--*",
    "prerelease": "yarn run packages",
    "release": "lerna publish --conventional-commits"
  },
  "dependencies": {
    "@seolhun/localize-react-components": "^1.0.5",
    "classnames": "^2.2.6",
    "enzyme": "^3.4.4",
    "enzyme-adapter-react-16": "^1.2.0",
    "jest": "^23.5.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "devDependencies": {
    "@types/jest": "23.3.1",
    "@types/react": "16.4.11",
    "codacy-coverage": "3.0.0",
    "copyfiles": "2.0.0",
    "lerna": "^3.1.4",
    "mocha-lcov-reporter": "1.3.0",
    "sass": "^1.13.0",
    "ts-jest": "23.1.3",
    "tslint-config-airbnb": "^5.10.0",
    "typescript": "3.0.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  }
}
