{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": [
      "node_modules/@types",
      "src/types",
    ]
  },
  "exclude": [
    ".vscode",
    "node_modules/**",
    "packages/*",
    "./src/__test__/*"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
