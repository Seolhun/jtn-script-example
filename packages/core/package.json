{
  "private": true,
  "author": "Seolhun",
  "version": "0.0.6",
  "name": "@seolhun/localize-components-core",
  "description": "Localizing components Base Architecture to render",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Seolhun/localize-components"
  },
  "homepage": "https://github.com/Seolhun/localize-components#readme",
  "bugs": {
    "url": "https://github.com/Seolhun/localize-components/issues"
  },
  "keywords": [
    "react",
    "component",
    "typescript",
    "ui",
    "scss",
    "local"
  ],
  "license": "MIT",
  "main": "./src/index.ts",
  "scripts": {
    "build": "yarn style && tsc && yarn style:copy",
    "dev": "concurrently \"yarn style:watch\" \"tsc --watch\" \"yarn docs:dev\"",
    "style": "sass --update src:src --style compressed",
    "style:watch": "sass --watch src:dist/src --style compressed",
    "style:copy": "copyfiles src/**/*.css dist/",
    "style:clean": "find . -name *.css* -type f -delete",
    "test": "jest",
    "test-with-coverage": "jest --coverage && cat ./coverage/lcov.info | codacy-coverage",
    "docs:build": "cd packages/docs/ && yarn build",
    "docs:dev": "cd packages/docs/ && yarn dev",
    "clean": "lerna clean",
    "packages:bs": "lerna bootstrap",
    "packages:fix": "lerna run fix && echo",
    "packages:lint": "lerna run tslint",
    "packages:build": "yarn build && lerna run build",
    "prerelease": "yarn run packages",
    "release": "lerna publish --conventional-commits"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "enzyme": "^3.4.4",
    "enzyme-adapter-react-16": "^1.2.0",
    "jest": "^23.5.0"
  },
  "devDependencies": {
    "@types/jest": "23.3.1",
    "@types/react": "16.4.11",
    "codacy-coverage": "3.0.0",
    "copyfiles": "2.0.0",
    "lerna": "^3.1.4",
    "mocha-lcov-reporter": "1.3.0",
    "sass": "^1.13.0",
    "ts-jest": "23.1.3",
    "tslint-config-airbnb": "^5.10.0",
    "typescript": "3.0.1"
  },
  "peerDependencies": {
    "concurrently": "^4.0.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  }
}
