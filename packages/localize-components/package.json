{
  "name": "@seolhun/localize-components",
  "description": "Localizing React components is rendered by stand-alone not affect other styles.",
  "version": "0.0.10",
  "license": "MIT",
  "main": "./src/index.ts",
  "files": [
    "dist/",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "yarn style && tsc && yarn style:copy && yarn style:clean",
    "style": "sass --update src:../../dist/packages/localize-components/src --style compressed",
    "style:watch": "sass --watch src:dist/src --style compressed",
    "style:copy": "copyfiles src/**/*.css dist/",
    "style:clean": "find . -name *.css* -type f -delete",
    "test": "jest",
    "test-with-coverage": "jest --coverage && cat ./coverage/lcov.info | codacy-coverage"
  },
  "dependencies": {
    "@seolhun/localize-components-atomic": "^0.0.10",
    "@seolhun/localize-components-types": "^0.0.10",
    "classnames": "^2.2.6",
    "concurrently": "^4.0.0",
    "enzyme": "^3.4.4",
    "enzyme-adapter-react-16": "^1.2.0",
    "jest": "^23.5.0",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "styled-components": "^3.4.6"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.8",
    "ts-jest": "23.1.3"
  },
  "peerDependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  }
}
