{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": [
      "node"
    ],
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "src/__test__/**",
    "src/**/*.test.ts"
  ],
  "typeRoots": ["./@types"],
  "typeAcquisition": {
    "enable": true
  }
}
