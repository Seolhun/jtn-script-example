{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "dist",
    // "strict": true,
    "noImplicitThis": true,
    // "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    // "noUnusedParameters": true,
    // "noUnusedLocals": true,
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
